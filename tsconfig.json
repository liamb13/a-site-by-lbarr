{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es2022",
    "moduleResolution": "node10",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "jsx": "preserve",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}